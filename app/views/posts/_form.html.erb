<%= form_with(model: post, local: true, url: choose_new_or_edit ) do |form| %>
  <div class="form-floating mb-2">
    <%= form.text_area :content, :class => "form-control", placeholder: "Leave a comment here", style: "height: 100px", required: true %>
    <%= form.label :content %>
  </div>

  <div class="actions d-flex justify-content-end">
    <%= form.submit 'Publish' , :class => "btn btn-info" %>
  </div>
<% end %>
