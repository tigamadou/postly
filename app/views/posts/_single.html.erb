<div class="mb-1"><%= post.content %></div>
<div class="d-flex actions">
    <%= link_to(edit_post_path post) do %>
        <span class="badge rounded-pill bg-light text-dark" title="Edit">
            <i class="bi bi-pencil"></i> Edit
        </span>
    <% end %>

    
    <a title="Edit" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/posts/<%= post.id%>"> 
        <span class="badge rounded-pill bg-light text-danger">

        <i class="bi bi-x-lg"></i> Delete
        </span>
    </a>
    

</div>