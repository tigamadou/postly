<div class="post  p-3  py-2 shadow-xs rounded border mb-3">
    <div>
        <span class="text-muted fs-6">
            <%= post.created_at.strftime('%d/%m/%Y at %H:%M  ') %>
        </span>
    </div>
    <div class="mb-1"><%= post.content %></div>
    <div class="d-flex actions">
        <%= link_to(edit_post_path post) do %>
            <span class="badge rounded-pill  text-info" title="Edit">
                <i class="bi bi-pencil"></i> Edit
            </span>
        <% end %>

        
        <a title="Edit" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/posts/<%= post.id%>"> 
            <span class="badge rounded-pill text-danger">

            <i class="bi bi-x-lg"></i> Delete
            </span>
        </a>
    </div>
</div>